{{ define "title" }}Your Account{{ end }}

{{ define "main" }}
  <section class="account">
    {{ with .User }}
      <table>
        <tr>
          <th>Name</th>
          <td>{{ .Name }}</td>
        </tr>
        <tr>
          <th>Email</th>
          <td>{{ .Email }}</td>
        </tr>
        <tr>
          <th>Joined</th>
          <td>{{ humanDate .Created }}</td>
        </tr>
      </table>
    {{ end }}
  </section>
{{ end }}
