{{define "title"}}Snippet #{{.Snippet.ID}}{{ end }}

{{define "main"}}
<!-- prettier-ignore -->
{{with .Snippet}}
<article class="snippet">
  <div class="metadata">
    <h2>{{.Title}}</h2>
    <span>#{{.ID}}</span>
  </div>
  <pre><code>{{.Content}}</code></pre>
  <footer class="metadata">
    <time>Created: {{.Created}}</time>
    <time>Expires: {{.Expires}}</time>
  </footer>
</article>
{{ end }}
{{ end }}
